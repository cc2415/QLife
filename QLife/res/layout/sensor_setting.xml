<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#2a3137">
    <TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16dp"
	    android:padding="3dp"
	    android:textColor="#FFFFFF"
	    android:text="传感器"/>
    
	<LinearLayout
	    android:id="@+id/pressure_linear"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="#3a4249"
	    android:layout_marginBottom="1dp"
	    android:padding="8dp">
	    <TextView  
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:layout_marginRight="110dp"
	        android:textColor="#FFFFFF"
	        android:text="压 力 传 感 器"/>
	    <ToggleButton 
	        android:id="@+id/pressure_toggle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF"
	        android:textOn="打开"
	        android:textOff="关闭"/>
	    </LinearLayout>
	    
	<LinearLayout
	    android:id="@+id/orientation_linear"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="#3a4249"
	    android:layout_marginBottom="1dp"
	    android:padding="8dp">
	    <TextView  
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:layout_marginRight="110dp"
	        android:textColor="#FFFFFF"
	        android:text="方 向 传 感 器"/>
	    <ToggleButton 
	        android:id="@+id/orientation_toggle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF"
	        android:textOn="打开"
	        android:textOff="关闭"/>
    </LinearLayout>
	    
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16dp"
	    android:padding="3dp"
	    android:textColor="#FFFFFF"
	    android:text="输入法"/>
	
	<LinearLayout
	    android:id="@+id/voice_linear"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="#3a4249"
	    android:layout_marginBottom="1dp"
	    android:padding="8dp">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:layout_marginRight="110dp"
	        android:textColor="#FFFFFF"
	        android:text="语 音 输 入 法"/>
	    <ToggleButton 
	        android:id="@+id/voice_toggle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF"
	        android:textOn="打开"
	        android:textOff="关闭"/>
	    </LinearLayout>
	    
		<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16dp"
	    android:padding="3dp"
	    android:textColor="#FFFFFF"
	    android:text="使用介绍"/>	
	
	    <TextView 
	        android:id="@+id/introduce_text"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:lineSpacingExtra="8dp"
	        android:padding="20dp"
	        android:textSize="16dp"
	        android:textColor="#FFFFFF"
	        android:background="#3a4249"
	        android:text="请选泽需要使用的功能"/>
	    <!-- 请选泽需要使用的功能 -->
</LinearLayout>
